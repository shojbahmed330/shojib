{
  "name": "voice-social-server",
  "version": "1.0.0",
  "description": "Voice Social - Backend Server with Socket.io, Firebase, and Cloudinary integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd client && npm run build",
    "vercel-build": "cd client && npm install && npm run build",
    "install:all": "npm install && cd client && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "db:seed": "node scripts/seedDatabase.js",
    "logs:error": "tail -f logs/error.log",
    "logs:combined": "tail -f logs/combined.log",
    "cleanup:files": "node scripts/cleanupFiles.js",
    "cleanup:logs": "rm -rf logs/*.log"
  },
  "keywords": [
    "social-media",
    "voice",
    "chat",
    "nodejs",
    "express",
    "socket.io",
    "firebase",
    "cloudinary",
    "mongodb"
  ],
  "author": "MiniMax Agent",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^6.10.0",
    "rate-limit-mongo": "^2.3.2",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "cloudinary": "^1.40.0",
    "firebase-admin": "^11.10.1",
    "fuse.js": "^6.6.2",
    "crypto": "^1.0.1",
    "path": "^0.12.7",
    "http": "^0.0.1-security"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/node": "^20.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/voice-social.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/voice-social/issues"
  },
  "homepage": "https://github.com/yourusername/voice-social#readme"
}