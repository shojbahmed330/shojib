{
  "version": 2,
  "name": "voice-social",
  "framework": null,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "client/build",
  "installCommand": "echo 'Using custom build script'",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/serverless"
    },
    {
      "source": "/socket.io/(.*)",
      "destination": "/api/socket"
    },
    {
      "source": "/health",
      "destination": "/api/health"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
  },
  "functions": {
    "api/serverless.js": {
      "maxDuration": 30
    },
    "api/socket.js": {
      "maxDuration": 30
    },
    "api/health.js": {
      "maxDuration": 10
    }
  },
  "regions": ["iad1"],
  "github": {
    "autoAlias": false
  }
}
